# Scrypted NVR Configuration
SCRYPTED_HOST=https://192.168.10.7:10443
# Optional basic auth for Scrypted (uncomment and fill if required)
SCRYPTED_USER=
SCRYPTED_PASSWORD=
# Allow connecting to self-signed TLS on Scrypted host (true/false). Default: false
ALLOW_SELF_SIGNED=false

# Google Cloud Storage Configuration
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=your-scrypted-backup-bucket
GCS_KEYFILE_PATH=/path/to/service-account-key.json

# State File
STATE_FILE_PATH=./backup-state.json

# Logging level: debug | info | warn | error
LOG_LEVEL=info